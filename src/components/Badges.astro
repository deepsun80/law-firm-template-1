<section class="badges" id="results">
  <div class="badges__container container">
    <h2 class="badges__title">Results for Austin Families</h2>
    <div class="badges__grid">
      <div class="badges__item">
        <span class="badges__number">500+</span>
        <span class="badges__label">Families Helped</span>
      </div>
      <div class="badges__item">
        <span class="badges__number">$100M+</span>
        <span class="badges__label">Recovered</span>
      </div>
      <div class="badges__item">
        <span class="badges__number">99%</span>
        <span class="badges__label">Success Rate</span>
      </div>
      <div class="badges__item">
        <span class="badges__number">Top Rated</span>
        <span class="badges__label">In Austin</span>
      </div>
    </div>
  </div>
</section>

<style>
  .badges {
    background-color: var(--color-blue);
    padding: 48px 0;
  }

  .badges__title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    color: var(--color-white);
    text-align: center;
    margin-bottom: 32px;
  }

  .badges__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .badges__item {
    text-align: center;
    padding: 20px;
    border: 2px solid var(--color-gold);
    border-radius: 8px;
  }

  .badges__number {
    display: block;
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 4px;
  }

  .badges__label {
    font-size: 0.85rem;
    color: var(--color-gold);
  }

  @media (min-width: 768px) {
    .badges {
      padding: 64px 0;
    }

    .badges__title {
      font-size: 1.5rem;
    }

    .badges__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 32px;
    }

    .badges__number {
      font-size: 1.75rem;
    }
  }
</style>
