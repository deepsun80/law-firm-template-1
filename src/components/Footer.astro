<footer class="footer" id="footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Contact Info -->
      <div class="footer-column">
        <div class="footer-logo">
          <a href="/">
            <img src="/images/logo-light.png" alt="Logo" />
          </a>
        </div>
        <address class="footer-address">
          <span>
            <i class="fa fa-map-marker"></i>
            08 W 36th St, New York, NY 10001
          </span>
          <span>
            <i class="fa fa-phone"></i>
            +1 333 9296
          </span>
          <span>
            <i class="fa fa-envelope-o"></i>
            <a href="mailto:contact@example.com">contact@example.com</a>
          </span>
          <span>
            <i class="fa fa-file-pdf-o"></i>
            <a href="#">Download Brochure</a>
          </span>
        </address>
      </div>

      <!-- Practice Areas -->
      <div class="footer-column">
        <h4 class="footer-title">Practice Areas</h4>
        <ul class="footer-list">
          <li>Corporate and M&A</li>
          <li>Construction and Real Estate</li>
          <li>Commercial Dispute Resolution</li>
          <li>Employment</li>
          <li>Banking and Finance</li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="footer-column">
        <h4 class="footer-title">Newsletter</h4>
        <p class="footer-text">Signup for our newsletter to get the latest news, updates and special offers in your inbox.</p>
        <form class="newsletter-form" id="newsletter-form">
          <div class="form-group">
            <input type="email" placeholder="enter your email" required />
            <button type="submit" aria-label="Subscribe">
              <i class="fa fa-long-arrow-right"></i>
            </button>
          </div>
        </form>
        <small class="footer-small">Your email is safe with us. We don't spam.</small>
      </div>
    </div>
  </div>

  <!-- Subfooter -->
  <div class="subfooter">
    <div class="container">
      <div class="subfooter-inner">
        <div class="copyright">
          &copy; Copyright 2025 - Justica by Designesia
        </div>
        <div class="social-icons">
          <a href="#" aria-label="Facebook"><i class="fa fa-facebook"></i></a>
          <a href="#" aria-label="Twitter"><i class="fa fa-twitter"></i></a>
          <a href="#" aria-label="LinkedIn"><i class="fa fa-linkedin"></i></a>
          <a href="#" aria-label="Pinterest"><i class="fa fa-pinterest"></i></a>
          <a href="#" aria-label="RSS"><i class="fa fa-rss"></i></a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #111111;
    color: #ffffff;
    padding: 80px 0 0 0;
  }

  .footer .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 60px;
    }
  }

  .footer-column {
    padding: 0;
  }

  .footer-logo {
    margin-bottom: 20px;
  }

  .footer-logo img {
    height: 40px;
    width: auto;
  }

  .footer-address {
    font-style: normal;
  }

  .footer-address span {
    display: block;
    margin-bottom: 15px;
    font-family: "Jost", sans-serif;
    font-size: 15px;
    line-height: 1.6;
  }

  .footer-address i {
    color: var(--primary-color);
    margin-right: 15px;
    width: 16px;
    text-align: center;
  }

  .footer-address a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer-address a:hover {
    color: var(--primary-color);
  }

  .footer-title {
    font-family: "Libre Baskerville", serif;
    font-size: 18px;
    font-weight: 700;
    color: var(--primary-color);
    margin: 0 0 20px 0;
  }

  .footer-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-list li {
    position: relative;
    padding: 10px 0 10px 25px;
    font-family: "Jost", sans-serif;
    font-size: 15px;
    color: #ccc;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-list li:last-child {
    border-bottom: none;
  }

  .footer-list li::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    background: var(--primary-color);
    border-radius: 50%;
  }

  .footer-text {
    font-family: "Jost", sans-serif;
    font-size: 15px;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 20px 0;
  }

  .newsletter-form {
    margin-bottom: 15px;
  }

  .form-group {
    display: flex;
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
  }

  .form-group input {
    flex: 1;
    background: transparent;
    border: none;
    padding: 10px 0;
    color: #fff;
    font-family: "Jost", sans-serif;
    font-size: 14px;
    outline: none;
  }

  .form-group input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .form-group button {
    background: transparent;
    border: none;
    color: var(--primary-color);
    font-size: 18px;
    cursor: pointer;
    padding: 10px;
    transition: color 0.3s;
  }

  .form-group button:hover {
    color: #fff;
  }

  .footer-small {
    font-family: "Jost", sans-serif;
    font-size: 13px;
    color: rgba(255, 255, 255, 0.5);
  }

  /* Subfooter */
  .subfooter {
    margin-top: 60px;
    padding: 25px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .subfooter .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
  }

  .subfooter-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    text-align: center;
  }

  @media (min-width: 768px) {
    .subfooter-inner {
      flex-direction: row;
      text-align: left;
    }
  }

  .copyright {
    font-family: "Jost", sans-serif;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.7);
  }

  .social-icons {
    display: flex;
    gap: 15px;
  }

  .social-icons a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: #fff;
    font-size: 16px;
    transition: color 0.3s;
  }

  .social-icons a:hover {
    color: var(--primary-color);
  }
</style>
