<!-- Header -->
<header class="header" id="header">
  <div class="container">
    <div class="header-inner">
      <div class="logo-wrapper">
        <a href="/">
          <img src="/images/logo-light.png" alt="Logo" class="logo" />
          <img src="/images/logo.png" alt="Logo" class="logo-dark" />
        </a>
      </div>

      <nav class="main-nav" id="main-nav">
        <ul class="nav-menu">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/practice-areas">Practice Areas</a></li>
          <li><a href="/news">News</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </nav>

      <div class="header-right">
        <div class="h-phone">
          <span>Need&nbsp;Help?</span>
          <i class="fa fa-phone"></i> 1 200 300 9000
        </div>
        <button class="menu-toggle" id="menu-toggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  // Sticky header on scroll
  const header = document.getElementById('header');
  const topbar = document.getElementById('topbar');

  function handleScroll() {
    if (window.scrollY > 50) {
      header?.classList.add('scrolled');
      topbar?.classList.add('hidden');
    } else {
      header?.classList.remove('scrolled');
      topbar?.classList.remove('hidden');
    }
  }

  window.addEventListener('scroll', handleScroll);

  // Mobile menu toggle
  const menuToggle = document.getElementById('menu-toggle');
  const mainNav = document.getElementById('main-nav');

  menuToggle?.addEventListener('click', () => {
    mainNav?.classList.toggle('open');
    menuToggle?.classList.toggle('active');
  });
</script>

<style>
  /* Topbar Styles */
  #topbar {
    position: relative;
    z-index: 1002;
    width: 100%;
    padding: 0;
    background: rgba(0, 0, 0, 0.3);
    display: none;
  }

  @media (min-width: 768px) {
    #topbar {
      display: block;
    }
  }

  #topbar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
  }

  #topbar.hidden {
    display: none;
  }

  .topbar-left,
  .topbar-right {
    display: flex;
  }

  .topbar-widget {
    font-size: 13px;
    display: flex;
    align-items: center;
    padding: 8px 15px;
    font-weight: 400;
    height: 40px;
    color: #fff;
  }

  .topbar-widget a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s;
  }

  .topbar-widget a:hover {
    color: var(--primary-color);
  }

  .topbar-widget.tb-social {
    padding: 0;
  }

  .topbar-widget.tb-social a {
    font-size: 14px;
    padding: 8px 15px;
    display: inline-flex;
    align-items: center;
  }

  /* Header Styles */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1001;
    background: rgba(0, 0, 0, 0.5);
    transition: all 0.3s ease;
    height: 80px;
  }

  @media (min-width: 768px) {
    .header {
      position: absolute;
      top: 40px;
      height: 90px;
    }
  }

  .header.scrolled {
    position: fixed;
    top: 0;
    background: rgba(17, 17, 17, 1);
    box-shadow: 0 4px 6px 0 rgba(10, 10, 10, 0.1);
  }

  .header.scrolled .logo {
    display: none;
  }

  .header.scrolled .logo-dark {
    display: block;
  }

  .header .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    height: 100%;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  .logo-wrapper a {
    display: flex;
    align-items: center;
  }

  .logo-wrapper img {
    height: 40px;
    width: auto;
  }

  .logo-dark {
    display: none;
  }

  /* Navigation */
  .main-nav {
    display: none;
  }

  @media (min-width: 992px) {
    .main-nav {
      display: block;
    }
  }

  .nav-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0;
  }

  .nav-menu li {
    position: relative;
  }

  .nav-menu li a {
    display: block;
    padding: 30px 18px;
    color: #fff;
    text-decoration: none;
    font-family: "Jost", sans-serif;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 1px;
    transition: color 0.3s;
  }

  .nav-menu li a:hover {
    color: var(--primary-color);
  }

  .header.scrolled .nav-menu li a {
    color: #fff;
  }

  /* Header Right */
  .header-right {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .h-phone {
    display: none;
    color: #fff;
    font-family: "Jost", sans-serif;
    font-size: 14px;
  }

  @media (min-width: 992px) {
    .h-phone {
      display: block;
    }
  }

  .h-phone span {
    margin-right: 10px;
    opacity: 0.8;
  }

  .h-phone i {
    margin-right: 5px;
    color: var(--primary-color);
  }

  /* Mobile Menu Toggle */
  .menu-toggle {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 18px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  @media (min-width: 992px) {
    .menu-toggle {
      display: none;
    }
  }

  .menu-toggle span {
    display: block;
    width: 100%;
    height: 2px;
    background: #fff;
    transition: all 0.3s;
  }

  .menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  /* Mobile Navigation */
  @media (max-width: 991px) {
    .main-nav {
      position: fixed;
      top: 80px;
      left: 0;
      width: 100%;
      background: #111;
      padding: 20px 0;
      transform: translateY(-100%);
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s;
    }

    .main-nav.open {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
      display: block;
    }

    .nav-menu {
      flex-direction: column;
    }

    .nav-menu li a {
      padding: 15px 30px;
    }
  }
</style>
