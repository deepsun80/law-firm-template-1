<!-- Hero Carousel -->
<section class="hero-carousel" id="hero-carousel">
  <div class="carousel-inner">
    <!-- Slide 1 -->
    <div class="carousel-slide active" data-bg="/images/slider/1.jpg">
      <div class="slide-overlay"></div>
      <div class="container">
        <div class="slide-content">
          <h4 class="slide-subtitle">Need Any Help?</h4>
          <h1 class="slide-title">We Fight for Right</h1>
          <p class="slide-text">Providing legal representation and counsel to safeguard your rights. Navigate complex legal challenges, and pursue justice with unwavering dedication.</p>
          <a href="/practice-areas" class="btn-custom">Explore</a>
        </div>
      </div>
    </div>

    <!-- Slide 2 -->
    <div class="carousel-slide" data-bg="/images/slider/2.jpg">
      <div class="slide-overlay"></div>
      <div class="container">
        <div class="slide-content">
          <h4 class="slide-subtitle">Law & Insurance Specialist</h4>
          <h1 class="slide-title">Because We Care</h1>
          <p class="slide-text">Providing legal representation and counsel to safeguard your rights. Navigate complex legal challenges, and pursue justice with unwavering dedication.</p>
          <a href="/practice-areas" class="btn-custom">Explore</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Carousel Indicators -->
  <div class="carousel-indicators">
    <button class="indicator active" data-slide="0" aria-label="Slide 1"></button>
    <button class="indicator" data-slide="1" aria-label="Slide 2"></button>
  </div>

  <!-- Carousel Controls -->
  <button class="carousel-control prev" aria-label="Previous slide">
    <span class="control-icon">&lsaquo;</span>
  </button>
  <button class="carousel-control next" aria-label="Next slide">
    <span class="control-icon">&rsaquo;</span>
  </button>
</section>

<!-- CTA Section -->
<section class="cta-section">
  <div class="container">
    <div class="cta-inner">
      <h3 class="cta-text">Contact Us Now! Get a Free Consultation for Your Case.</h3>
      <a href="/contact" class="btn-custom btn-dark">Make Appointment</a>
    </div>
  </div>
</section>

<script>
  // Carousel functionality
  const slides = document.querySelectorAll('.carousel-slide');
  const indicators = document.querySelectorAll('.indicator');
  const prevBtn = document.querySelector('.carousel-control.prev');
  const nextBtn = document.querySelector('.carousel-control.next');
  let currentSlide = 0;
  let autoplayInterval: ReturnType<typeof setInterval>;

  function showSlide(index: number) {
    // Handle wraparound
    if (index >= slides.length) index = 0;
    if (index < 0) index = slides.length - 1;

    // Update slides
    slides.forEach((slide, i) => {
      slide.classList.toggle('active', i === index);
    });

    // Update indicators
    indicators.forEach((indicator, i) => {
      indicator.classList.toggle('active', i === index);
    });

    currentSlide = index;
  }

  function nextSlide() {
    showSlide(currentSlide + 1);
  }

  function prevSlide() {
    showSlide(currentSlide - 1);
  }

  function startAutoplay() {
    autoplayInterval = setInterval(nextSlide, 5000);
  }

  function stopAutoplay() {
    clearInterval(autoplayInterval);
  }

  // Event listeners
  prevBtn?.addEventListener('click', () => {
    prevSlide();
    stopAutoplay();
    startAutoplay();
  });

  nextBtn?.addEventListener('click', () => {
    nextSlide();
    stopAutoplay();
    startAutoplay();
  });

  indicators.forEach((indicator, index) => {
    indicator.addEventListener('click', () => {
      showSlide(index);
      stopAutoplay();
      startAutoplay();
    });
  });

  // Start autoplay
  startAutoplay();

  // Set background images
  slides.forEach((slide) => {
    const bg = slide.getAttribute('data-bg');
    if (bg) {
      (slide as HTMLElement).style.backgroundImage = `url(${bg})`;
    }
  });
</script>

<style>
  /* Hero Carousel */
  .hero-carousel {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
  }

  .carousel-inner {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .carousel-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.8s ease, visibility 0.8s ease;
  }

  .carousel-slide.active {
    opacity: 1;
    visibility: visible;
  }

  .slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }

  .carousel-slide .container {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
  }

  .slide-content {
    max-width: 500px;
    color: #fff;
  }

  .slide-subtitle {
    font-family: "Jost", sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: var(--primary-color);
    margin-bottom: 15px;
    animation: fadeInUp 0.6s ease;
  }

  .slide-title {
    font-family: "Libre Baskerville", serif;
    font-size: 36px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 20px;
    animation: fadeInUp 0.6s ease 0.1s both;
  }

  @media (min-width: 768px) {
    .slide-title {
      font-size: 48px;
    }
  }

  @media (min-width: 1024px) {
    .slide-title {
      font-size: 56px;
    }
  }

  .slide-text {
    font-family: "Jost", sans-serif;
    font-size: 16px;
    line-height: 1.8;
    margin-bottom: 30px;
    opacity: 0.9;
    animation: fadeInUp 0.6s ease 0.2s both;
  }

  @media (min-width: 768px) {
    .slide-text {
      font-size: 18px;
    }
  }

  .btn-custom {
    display: inline-block;
    padding: 12px 30px;
    background: var(--primary-color);
    color: #fff;
    font-family: "Jost", sans-serif;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-decoration: none;
    border: 2px solid var(--primary-color);
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease 0.4s both;
  }

  .btn-custom:hover {
    background: transparent;
    color: #fff;
  }

  /* Carousel Indicators */
  .carousel-indicators {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 10;
  }

  .indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background 0.3s;
  }

  .indicator.active,
  .indicator:hover {
    background: var(--primary-color);
  }

  /* Carousel Controls */
  .carousel-control {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    background: rgba(0, 0, 0, 0.3);
    border: none;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s;
  }

  .carousel-control:hover {
    background: var(--primary-color);
  }

  .carousel-control.prev {
    left: 20px;
  }

  .carousel-control.next {
    right: 20px;
  }

  .control-icon {
    color: #fff;
    font-size: 30px;
    line-height: 1;
  }

  /* CTA Section */
  .cta-section {
    background: var(--primary-color);
    padding: 30px 0;
  }

  .cta-section .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
  }

  .cta-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    text-align: center;
  }

  @media (min-width: 768px) {
    .cta-inner {
      flex-direction: row;
      text-align: left;
    }
  }

  .cta-text {
    font-family: "Libre Baskerville", serif;
    font-size: 18px;
    font-weight: 400;
    color: #fff;
    margin: 0;
  }

  @media (min-width: 768px) {
    .cta-text {
      font-size: 22px;
    }
  }

  .btn-custom.btn-dark {
    background: #111;
    border-color: #111;
    animation: none;
    white-space: nowrap;
  }

  .btn-custom.btn-dark:hover {
    background: #000;
    border-color: #000;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
