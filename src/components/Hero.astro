<section class="hero" id="hero">
  <!-- Background layers -->
  <div class="hero-bg">
    <!-- Slate background (left 60%) -->
    <div class="bg-slate"></div>

    <!-- Teal background (right 40%) with single zigzag edge -->
    <svg
      class="bg-teal"
      viewBox="0 0 500 700"
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M120,0
           L500,0
           L500,700
           L120,700
           L120,480
           Q120,460 140,450
           L220,400
           Q240,390 240,370
           L240,330
           Q240,310 220,300
           L140,250
           Q120,240 120,220
           L120,0
           Z"
        fill="currentColor"
      />
    </svg>

    <!-- Top-left teal triangle with white bottom border -->
    <div class="bg-triangle"></div>
  </div>

  <div class="hero-inner">
    <!-- Text Content -->
    <div class="hero-content">
      <h1 class="hero-headline">
        <span class="headline-primary">Defending Austin's Injured.</span>
        <span class="headline-secondary">Restoring Your Future.</span>
      </h1>
      <p class="hero-subheadline">
        The strategic advocacy 500+ local families trust when it matters most.
      </p>
      <a href="#contact" class="hero-cta">Start Case Review</a>
    </div>

    <!-- Hexagon Grid -->
    <div class="hero-hexagons">
      <!-- hex-city-2: Top right, cut off -->
      <div class="hex hex-city hex-city-2">
        <img
          src="/austin-downtown-photo.png"
          alt="Downtown Austin skyline view from Lady Bird Lake"
          width="400"
          height="400"
          loading="eager"
        />
      </div>

      <!-- hex-city-1: Center, main anchor -->
      <div class="hex hex-city hex-city-1">
        <img
          src="/austin-city-bats.png"
          alt="Austin Congress Avenue Bridge at sunset with bats flying over Lady Bird Lake"
          width="400"
          height="400"
          loading="eager"
        />
      </div>

      <!-- Grey connecting line -->
      <div class="hex-connector"></div>

      <!-- hex-practice-1: Medical Negligence -->
      <a
        href="#expertise"
        class="hex hex-practice hex-practice-1"
        aria-label="Medical Negligence practice area"
      >
        <img
          src="/austin-medical-district.png"
          alt="Texas Medical Center building in Austin"
          width="400"
          height="400"
          loading="eager"
        />
        <div class="hex-overlay">
          <span class="hex-label">Medical<br />Negligence</span>
        </div>
      </a>

      <!-- hex-practice-2: Work Injuries -->
      <a
        href="#expertise"
        class="hex hex-practice hex-practice-2"
        aria-label="Work Injuries practice area"
      >
        <img
          src="/austin-contruction-project.png"
          alt="Construction site in Austin with downtown skyline"
          width="400"
          height="400"
          loading="eager"
        />
        <div class="hex-overlay">
          <span class="hex-label">Work<br />Injuries</span>
        </div>
      </a>
    </div>
  </div>
</section>

<style>
  /* ===== Hero Section - Mobile First ===== */
  .hero {
    position: relative;
    min-height: 100vh;
    min-height: 100svh;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding: 60px 0 40px;
  }

  /* ===== Background Layers ===== */
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  /* Slate background - left ~60% */
  .bg-slate {
    position: absolute;
    top: 0;
    left: 0;
    width: 65%;
    height: 100%;
    background-color: var(--color-slate);
  }

  /* Teal background - right ~40% with single zigzag edge */
  .bg-teal {
    position: absolute;
    top: 0;
    right: 0;
    width: 55%;
    height: 100%;
    color: var(--color-teal);
  }

  /* Top-left teal triangle with white bottom border */
  .bg-triangle {
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 160px 250px 0 0;
    border-color: var(--color-teal) transparent transparent transparent;
    /* White border on the hypotenuse using box-shadow trick */
    filter: drop-shadow(3px 3px 0 var(--color-white));
  }

  /* ===== Hero Inner Container ===== */
  .hero-inner {
    position: relative;
    z-index: 1;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 16px;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  /* ===== Hero Content ===== */
  .hero-content {
    max-width: 100%;
  }

  .hero-headline {
    margin-bottom: 20px;
  }

  .headline-primary {
    display: block;
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 6vw, 3.25rem);
    font-weight: 700;
    color: var(--color-white);
    line-height: 1.1;
    letter-spacing: -0.5px;
  }

  .headline-secondary {
    display: block;
    font-family: var(--font-body);
    font-size: clamp(1.25rem, 4.5vw, 2.25rem);
    font-weight: 400;
    color: var(--color-white);
    line-height: 1.2;
    margin-top: 8px;
  }

  .hero-subheadline {
    font-family: var(--font-body);
    font-size: clamp(0.95rem, 2.5vw, 1.15rem);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.6;
    margin-bottom: 24px;
    max-width: 420px;
  }

  .hero-cta {
    display: inline-block;
    font-family: var(--font-heading);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-slate);
    background-color: var(--color-gold);
    padding: 14px 28px;
    text-decoration: none;
    border-radius: 4px;
    letter-spacing: 0.5px;
    transition:
      background-color var(--transition-speed) ease,
      transform var(--transition-speed) ease;
  }

  .hero-cta:hover {
    background-color: var(--color-gold-hover);
    transform: translateY(-2px);
  }

  /* ===== Hexagon Grid ===== */
  .hero-hexagons {
    position: relative;
    width: 100%;
    height: 400px;
    margin: 0 auto;
  }

  /* Individual hexagon - using drop-shadow for white border */
  .hex {
    position: absolute;
    display: block;
    filter: drop-shadow(0 0 0 5px var(--color-white))
      drop-shadow(0 2px 8px rgba(0, 0, 0, 0.15));
  }

  .hex img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform var(--transition-speed) ease;
  }

  /* Mobile hexagon positions - 40% larger */
  .hex-city-1 {
    width: 196px; /* 140 * 1.4 */
    left: 5%;
    top: 40px;
  }

  .hex-city-2 {
    width: 168px; /* 120 * 1.4 */
    right: 10%;
    top: -40px;
  }

  .hex-practice-1 {
    width: 168px;
    right: 0;
    top: 100px;
  }

  .hex-practice-2 {
    width: 168px;
    left: 30%;
    top: 220px;
  }

  /* Grey connector line */
  .hex-connector {
    position: absolute;
    width: 70px;
    height: 3px;
    background-color: #8a9dad;
    transform: rotate(35deg);
    top: 180px;
    left: 45%;
    z-index: 0;
    border-radius: 2px;
  }

  /* Practice area overlays - must match hexagon shape */
  .hex-practice {
    text-decoration: none;
    cursor: pointer;
  }

  .hex-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(42, 63, 82, 0.55);
    z-index: 3;
    transition: background var(--transition-speed) ease;
    /* No clip-path needed - the PNG is already hexagonal with transparency */
  }

  .hex-label {
    font-family: var(--font-heading);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-white);
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1.3;
  }

  .hex-practice:hover .hex-overlay {
    background: rgba(42, 63, 82, 0.75);
  }

  .hex-practice:hover img {
    transform: scale(1.06);
  }

  /* ===== Tablet (768px+) ===== */
  @media (min-width: 768px) {
    .hero {
      padding: 80px 0 60px;
    }

    .hero-inner {
      padding: 0 24px;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }

    .hero-content {
      max-width: 40%;
      flex-shrink: 0;
    }

    .hero-hexagons {
      flex: 1;
      max-width: 55%;
      height: 500px;
    }

    /* Tablet hexagon positions - 40% larger */
    .hex-city-1 {
      width: 252px; /* 180 * 1.4 */
      left: 0;
      top: 60px;
    }

    .hex-city-2 {
      width: 210px; /* 150 * 1.4 */
      right: 5%;
      top: -50px;
    }

    .hex-practice-1 {
      width: 210px;
      right: -5%;
      top: 130px;
    }

    .hex-practice-2 {
      width: 210px;
      left: 22%;
      top: 300px;
    }

    .hex-connector {
      width: 100px;
      top: 210px;
      left: 35%;
      transform: rotate(28deg);
    }

    .hex-label {
      font-size: 1rem;
    }

    /* Adjust triangle for tablet */
    .bg-triangle {
      border-width: 200px 320px 0 0;
    }
  }

  /* ===== Desktop (1024px+) ===== */
  @media (min-width: 1024px) {
    .hero {
      min-height: calc(100vh - var(--header-height));
      padding: 40px 0;
    }

    .hero-content {
      max-width: 420px;
    }

    .hero-hexagons {
      height: 580px;
      max-width: 58%;
    }

    /* Desktop hexagon positions - 40% larger */
    .hex-city-1 {
      width: 308px; /* 220 * 1.4 */
      left: -2%;
      top: 70px;
    }

    .hex-city-2 {
      width: 252px; /* 180 * 1.4 */
      right: 5%;
      top: -70px;
    }

    .hex-practice-1 {
      width: 252px;
      right: -5%;
      top: 145px; /* 50% from top of hex-city-1 */
    }

    .hex-practice-2 {
      width: 252px;
      right: 15%;
      top: 360px; /* Adjacent to bottom-left of practice-1 */
    }

    .hex-connector {
      width: 130px;
      height: 3px;
      top: 260px;
      left: 28%;
      transform: rotate(22deg);
    }

    .headline-primary {
      font-size: 3rem;
    }

    .headline-secondary {
      font-size: 2rem;
      margin-top: 10px;
    }

    .hero-subheadline {
      font-size: 1.1rem;
      margin-bottom: 28px;
    }

    .hero-cta {
      font-size: 1rem;
      padding: 16px 32px;
    }

    .hex-label {
      font-size: 1.1rem;
      letter-spacing: 1px;
    }

    /* Adjust triangle for desktop */
    .bg-triangle {
      border-width: 240px 380px 0 0;
    }
  }

  /* ===== Large Desktop (1280px+) ===== */
  @media (min-width: 1280px) {
    .hero-content {
      max-width: 480px;
    }

    .hero-hexagons {
      height: 620px;
    }

    /* Large desktop hexagon positions - 40% larger */
    .hex-city-1 {
      width: 336px; /* 240 * 1.4 */
      left: -3%;
      top: 60px;
    }

    .hex-city-2 {
      width: 280px; /* 200 * 1.4 */
      right: 8%;
      top: -80px;
    }

    .hex-practice-1 {
      width: 280px;
      right: -2%;
      top: 150px;
    }

    .hex-practice-2 {
      width: 280px;
      right: 18%;
      top: 380px;
    }

    .hex-connector {
      width: 150px;
      top: 280px;
      left: 26%;
    }

    .headline-primary {
      font-size: 3.25rem;
    }

    .headline-secondary {
      font-size: 2.25rem;
    }

    /* Adjust triangle for large desktop */
    .bg-triangle {
      border-width: 260px 420px 0 0;
    }
  }
</style>
