    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .section-title {
    font-family: var(--font-title);
    font-size: 32px;
    font-weight: 700;
    color: #fff;
    margin: 0 0 20px 0;
  }

  @media (min-width: 768px) {
    .section-title {
